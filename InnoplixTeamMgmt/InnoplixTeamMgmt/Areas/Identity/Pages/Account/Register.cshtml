@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-12">
        <div class="card o-hidden border-0 shadow-lg my-3">
            <div class="card-body p-1">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="p-5 bg-light col-lg-12">
                        <div class="text-center">
                            <h1 class="h4 text-primary mb-3">Welcome, Create new account here!</h1>
                        </div>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group col-md-6">
                                <label asp-for="Input.Name"></label>
                                <input asp-for="Input.Name" class="form-control" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Input.CompanyName"></label>
                                    <input asp-for="Input.CompanyName" class="form-control form-control-user" />
                                    <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Input.UniqueId"></label>
                                    <input asp-for="Input.UniqueId" class="form-control form-control-user" />
                                    <span asp-validation-for="Input.UniqueId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Input.Mobile"></label>
                                    <input asp-for="Input.Mobile" class="form-control form-control-user" />
                                    <span asp-validation-for="Input.Mobile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control form-control-user" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-user" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>                    
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>
                        <hr>
                        <div class="text-center">
                            @*<a class="small" href="/identity/account/forgotpassword">Forgot Password?</a> &nbsp;
                            <a class="small" href="/identity/account/login">Login!</a>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
