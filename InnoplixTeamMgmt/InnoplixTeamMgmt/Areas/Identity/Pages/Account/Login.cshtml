@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-12">
        <div class="card o-hidden border-0 shadow-lg my-3">
            <div class="card-body p-1">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6" style="background-image:url('/theme/img/network-marketing.jpg'); background-position:center; background-size: cover;">
                        
                    </div>
                    <div class="p-5 bg-light col-lg-6">
                        <div class="text-center">
                            <h1 class="h4 text-primary mb-3">Welcome, Login here!</h1>
                        </div>
                        <form class="user" id="account" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Mobile"></label>
                                <input asp-for="Input.Mobile" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Enter Mobile Number..." />
                                <span asp-validation-for="Input.Mobile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox small">
                                    <input asp-for="Input.RememberMe" class="custom-control-input" />
                                    <label asp-for="Input.RememberMe" class="custom-control-label">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <a>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Log in</button>
                            </a>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="/identity/account/forgotpassword">Forgot Password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>